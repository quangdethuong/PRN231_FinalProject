@model IEnumerable<UserDto>
@using Project.Web.Utility
@{
    ViewData["Title"] = "List User";
}

<h1 class="bg-info text-white">All Users</h1>
<a asp-action="CreateUser" class="btn btn-secondary">Create a User</a>

<table class="table table-sm table-bordered">
	<tr>
		<th>ID</th>
		<th>Email</th>
		<th>Name</th>
		<th>Phone</th>
		<th>Update</th>
		<th>Delete</th>
	</tr>
	
	@foreach (UserDto user in Model)
	{
		@if (@user.ID != SD.AdminId) {
			<tr>
				<td>@user.ID</td>
				<td>@user.Email</td>
				<td>@user.Name</td>
				<td>@user.PhoneNumber</td>
				<td>
					<a class="btn btn-sm btn-primary" asp-action="UpdateUser" asp-route-id="@user.ID">
						Update
					</a>
				</td>
				<td>
					<form asp-action="DeleteUser" asp-route-id="@user.ID" method="Delete">
						<button type="submit" class="btn btn-sm btn-danger">
							Delete
						</button>
					</form>
				</td>
			</tr>
		}
	}
</table>